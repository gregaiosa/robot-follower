<launch>
    <arg name="model" default="best.pt" description="YOLO model to run"/>
    <arg name="topic" default="/j100_0076/sensors/camera_0/color/compressed" description="Image topic for YOLO"/>

    <node pkg="robot_follower" exec="vision">
        <param name="model" value="$(find-pkg-share robot_follower)/models/$(var model)"/>
	<param name="topic" value="$(var topic)"/>
    </node>
</launch>
